{% extends 'base.html.twig' %}

{% block title %}Liste des paiements{% endblock %}

{% block body %}
    <h1>Liste des paiements</h1>
    <table>
        <thead>
            <tr>
                <th>ID du Paiement</th>
                <th>Montant</th>
                <th>Date</th>
                
            </tr>
        </thead>
        <tbody>
            {% for payment in payments.data %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.amount / 100 }} {{ payment.currency }}</td>
                    <td>{{ payment.created|date('Y-m-d H:i:s') }}</td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
